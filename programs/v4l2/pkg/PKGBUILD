pkgname=v4l2
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://git.linuxtv.org/v4l-utils.git/"
license=('GPL')
source=("git://linuxtv.org/v4l-utils.git" "https://github.com/umlaeute/v4l2loopback.git")
md5sums=('SKIP' 'SKIP')

build() {
	cd "$srcdir/v4l-utils"

	meson setup build/
	ninja -C build/
	DESTDIR="${pkgdir}/lkp/benchmarks/v4l2" ninja -C build/ install
}

package() {
	cp -af "$srcdir/v4l2loopback" "${pkgdir}/lkp/benchmarks"
}
